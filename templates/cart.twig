{% extends "layout.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h2>Корзина</h2>
            <ul class="list-group">

                {% for product in cartProducts %}

                    <li class="list-group-item mb-3">
                        <div class="row">
                            <div class="col-md-3 text-center">
                                <img src="https://via.placeholder.com/150x150" alt="Изображение продукта" class="img-fluid">
                            </div>
                            <div class="col-md-6">
                                <h5>{{ product.name }}</h5>
                                <p>{{ product.description }}</p>
                                <p> Цена: <span class="text-muted">{{ product.price }}$</span></p> <!-- Добавляем цену под описание -->
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex flex-column">
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <button type="button" class="btn btn-secondary">-</button>
                                        <button type="button" class="btn btn-secondary">{{ product.count }}</button>
                                        <button type="button" class="btn btn-secondary">+</button>
                                    </div>
                                    <button type="button" class="btn btn-danger mt-2">Удалить</button>
                                </div>
                            </div>
                        </div>
                    </li>

                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
