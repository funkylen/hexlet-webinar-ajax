<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<title>Страница товаров</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="/assets/jquery-ui.min.css"/>
	</head>

	<body>

		<!-- Навигационное меню -->
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<a class="navbar-brand" href="#">Магазин</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item active">
						<a class="nav-link" href="#">Главная
							<span class="sr-only">(current)</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">О нас</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">Контакты</a>
					</li>
				</ul>

				<!-- Корзина с количеством товаров -->
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link" href="#">Корзина
							<span id="cart-count" class="badge badge-primary">{{ cart|length }}</span>
						</a>
					</li>
				</ul>

			</div>
		</nav>

		<!-- Контейнер с карточками товаров -->
		<div class="container mt-5">
			<form action="{{ url_for('products') }}" class="input-group mb-3">
				<input value="{{ filter }}" id="search" type="text" class="form-control" placeholder="Введите запрос" aria-label="Введите запрос" aria-describedby="basic-addon2" name="name">

				<div class="input-group-append">
					<button class="btn btn-outline-secondary" type="submit">Найти</button>
				</div>
			</form>


			<!-- Ряды и колонки для размещения карточек товаров -->
			<div class="row">

				{% for product in products %}

					<!-- Карточка товара -->
					<div class="col-sm-4">
						<div class="card mb-3">
							<img src="https://via.placeholder.com/350x150" class="card-img-top" alt="...">
							<div class="card-body">
								<h5 class="card-title">{{ product.name }}</h5>
								<p class="card-text">{{ product.description }}</p>


								<button {% if product.id not in cart %} style="display: none" {% endif %} onclick="remove({{ product.id }})" id="product-{{product.id}}-remove-btn" class="btn btn-outline-danger">
									Убрать из корзины
								</button>

								<button {% if product.id in cart %} style="display: none" {% endif %} onclick="add({{ product.id }})" id="product-{{product.id}}-add-btn" class="btn btn-primary">Добавить в корзину</button>


							</div>
						</div>
					</div>

				{% endfor %}

			</div>
		</div>
		<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
		<script src="/assets/jquery-ui.js"></script>
		<script src="/index.js"></script>
	</body>
</html>
